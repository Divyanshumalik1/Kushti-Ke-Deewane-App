<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/black2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AkhilBhartiyaKushtiMahasanghActivity">


    <Toolbar
            android:titleTextColor="@color/white"
            android:title="AKHIL BHARTIYA KUSHTI MAHASANGH"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"

            android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize">

    </Toolbar>

    <LinearLayout
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_gravity="top"
                android:layout_width="221dp"
                android:layout_height="215dp" android:background="@drawable/abkmimage"
                android:id="@+id/imageViewabkm"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_gravity="right"
                    android:background="@drawable/instagramicon"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/buttoninstaabkm"
                    android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/buttonfacebookabkm"
                    android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/button2"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="29dp" android:layout_marginEnd="13dp"
            />

            <Button
                    android:layout_gravity="right"
                    android:background="@drawable/facebookicon"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/buttonfacebookabkm"
                    app:layout_constraintStart_toEndOf="@+id/buttoninstaabkm" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/buttoninstaabkm"
                    app:layout_constraintBottom_toBottomOf="@+id/buttoninstaabkm" android:layout_marginEnd="28dp"
            />


            <Button
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:background="@color/white"
                    android:textColor="@color/red1"
                    android:text="www.Abkm.in"
                    android:layout_width="112dp"
                    android:layout_height="0dp"
                    android:id="@+id/button2"
                    app:layout_constraintTop_toBottomOf="@+id/buttoninstaabkm" android:layout_marginBottom="96dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="9dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>







    <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView

                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Aim and Vision of ABKM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:text="@string/abkm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

        </androidx.core.widget.NestedScrollView>
</LinearLayout>
